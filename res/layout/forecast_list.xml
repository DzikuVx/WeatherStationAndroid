<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="24pt"
            android:contentDescription="Weather icon"
            android:layout_height="24pt"
            android:id="@+id/weatherIcon"
            android:scaleX="1"
            android:scaleY="1"
            android:background="@color/colorSecondary"
            android:src="@drawable/icon_01d"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="4sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pt"
            android:textSize="@dimen/headline"
            android:textColor="@color/textSecondary"
            android:id="@+id/dayOfWeek"
            android:layout_marginLeft="24sp"
            android:layout_marginTop="16sp"
            android:layout_toRightOf="@+id/weatherIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/empty_temperature"
        android:textSize="@dimen/headline"
        android:id="@+id/temperature"
        android:textColor="@color/textSecondary"
        android:layout_toLeftOf="@id/maxTemperature"
        android:layout_alignBaseline="@+id/dayOfWeek" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/empty_temperature"
        android:id="@+id/maxTemperature"
        android:layout_marginLeft="12sp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="48sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4sp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/empty_temperature"
        android:textColor="@color/textSecondary"
        android:id="@+id/minTemperature"
        android:layout_alignLeft="@id/maxTemperature"
        android:layout_alignBottom="@+id/weatherIcon"/>

    <Space
        android:layout_width="20px"
        android:layout_height="4sp"
        android:layout_below="@+id/weatherIcon"
        android:layout_alignParentLeft="true" />
</RelativeLayout>